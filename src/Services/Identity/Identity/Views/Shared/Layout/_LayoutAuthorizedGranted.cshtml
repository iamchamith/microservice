<!doctype html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Amazon.com</title>
    <base href="/" />
    <link rel="stylesheet" href="~/identity-static-files/css/bootstrap/bootstrap.min.css" />
    <link href="~/identity-static-files/css/site.css" rel="stylesheet" />
</head>
<body>
    <app>
        <div class="sidebar">
            <div class="top-row pl-4 navbar navbar-dark">
                <a class="navbar-brand" href>Amazon.com</a>
                <button class="navbar-toggler">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            @await Html.PartialAsync(MvcHelper.GetComponentPath("menu", "_shop"))
            @await Html.PartialAsync(MvcHelper.GetComponentPath("menu", "_OrderNav"))
            @await Html.PartialAsync(MvcHelper.GetComponentPath("menu", "_AccountNav"))
        </div>

        <div class="main">
            <div class="top-row px-4">
            </div>

            <div class="content px-4">
                <div class="row">
                    <div class="col-md-3 col-lg-2 col-sm-2"> </div>
                    <div class="col-md-8 col-lg-8 col-sm-8">
                        @RenderBody()
                    </div>
                    <div class="col-md-2 col-lg-2 col-sm-2"> </div>
                </div>
            </div>
        </div>
    </app>
    <script src="~/identity-static-files/lib/jquery/jquery.min.js"></script>
    <script src="~/identity-static-files/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/identity-static-files/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
