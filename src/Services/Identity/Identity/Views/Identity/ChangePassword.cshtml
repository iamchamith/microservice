@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = AppConst.AUTHORIZED_LAYOUT;
}
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <h1>Change Password</h1>
        <form method="post" asp-controller="identity" asp-action="changepassword">
            <div class="form-group">
                <label for="exampleInputPassword1">Current Password</label>
                <input asp-for="CurrentPassword" class="form-control" autofocus />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">New Password</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Confirm new Password</label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Change Password</button>
            @await Html.PartialAsync(MvcHelper.GetComponentPath("notification", "_Notification"), ViewData["message"].ToViewMessage())
        </form>
    </div>
</div>
