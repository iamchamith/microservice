@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <form class="form-signin" method="post" asp-controller="identity" asp-action="resetpassword">
            <h1 class="h3 mb-3 font-weight-normal">Reset your password</h1>
            <label for="email">Email</label>
            <input asp-for="Email" autofocus class="form-control" disabled />
            <br />

            <label for="inputPassword">Password</label>
            <input asp-for="Password" autofocus class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />
            <label for="inputPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            <input type="hidden" id="Token" name="Token" value="@Model.Token" />
            <input type="hidden" id="Email" name="Email" value="@Model.Email" />
            <br />
            <button class="btn btn-lg btn-primary btn-block" type="submit">Reset the password</button>
            @await Html.PartialAsync(MvcHelper.GetComponentPath("notification", "_Notification"), ViewData["message"].ToViewMessage())
            <a asp-controller="identity" asp-action="register">Register</a> |
            <a asp-controller="identity" asp-action="forgetpassword">Forget Password</a>
        </form>
    </div>
</div>


