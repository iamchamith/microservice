@model RegisterViewModel
@{
    ViewData["Title"] = "Login";
    Layout = AppConst.DEFAULT_LAYOUT;
}
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <form class="form-signin" method="post" asp-controller="identity" asp-action="register">
            <h1 class="h3 mb-3 font-weight-normal">Register</h1>
            <label for="inputEmail">Email address</label>
            <input asp-for="Email" autofocus class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <br />
            <label for="inputEmail">First name</label>
            <input asp-for="Name" autofocus class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
            <br />
            <label for="inputPassword">Password</label>
            <input asp-for="Password" autofocus class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />
            <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
            <a href="/Identity/Login">Login</a>
            @await Html.PartialAsync(MvcHelper.GetComponentPath("notification", "_Notification"), ViewData["message"].ToViewMessage())
        </form>
    </div>
</div>

