@using  Identity.Model.ViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/_Layout.cshtml";
    string message = (string)ViewData["message"] ?? "";
}
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <form class="form-signin" method="post" action="/identity/login">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="@nameof( LoginViewModel.Email)" name="@nameof( LoginViewModel.Email)" class="form-control" placeholder="Email address" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="@nameof( LoginViewModel.Password)" name="@nameof( LoginViewModel.Password)" class="form-control" placeholder="Password" required>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me" id="@nameof( LoginViewModel.RememberMe)" name="@nameof( LoginViewModel.RememberMe)"> Remember me
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            <a href="/identity/register">Register</a>
            <a href="/identity/forgetpassword">Forget Password</a>
            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-danger" role="alert">@message</div>
            }
        </form>
    </div>
</div>
